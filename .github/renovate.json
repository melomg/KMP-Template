{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "branchPrefix": "renovate/",
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchPackageNames": [
        "renovatebot/github-action"
      ],
      "extends": [
        "schedule:weekly"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeStrategy": "rebase"
    },
    {
      "matchPackageNames": [
        "^com.google**",
        "^androidx.**"
      ],
      "groupName": "Google Monorepo"
    },
    {
      "matchPackageNames": [
        "^org.jetbrains"
      ],
      "groupName": "Kotlin Monorepo"
    },
    {
      "matchPackageNames": [
        "ktor"
      ],
      "groupName": "Ktor"
    }
  ]
}
